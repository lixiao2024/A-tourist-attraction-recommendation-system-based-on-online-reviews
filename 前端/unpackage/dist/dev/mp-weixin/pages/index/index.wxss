.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8f8f8;
}
.search-wrapper {
  position: relative;
  width: 92%;
  margin: 16px auto;
}
.search-wrapper .uni-icons {
  position: absolute;
  left: 16px;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  z-index: 1;
}
.search-bar {
  width: 100%;
  height: 44px;
  border-radius: 22px;
  background: #fff;
  padding: 0 48px;
  font-size: 14px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}
.comment-scroll {
  flex: 1;
  height: calc(100vh - 76px);
}
.comment-list {
  padding: 8px 4%;
}
.comment-item {
  margin-bottom: 16px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  padding: 16px;
  -webkit-transform: translateZ(0);
          transform: translateZ(0);
  transition: -webkit-transform 0.2s;
  transition: transform 0.2s;
  transition: transform 0.2s, -webkit-transform 0.2s;
  position: relative;
}
.comment-item:active {
  -webkit-transform: translateZ(0) scale(0.98);
          transform: translateZ(0) scale(0.98);
}
.comment-left {
  width: 20%;
  padding: 8px;
}
.comment-left .avatar {
  width: 48px;
  height: 48px;
  border-radius: 24px;
  background: #eee;
}
.comment-right {
  width: 80%;
  padding-left: 8px;
  padding-right: 20px;
}
.comment-right .nickname {
  font-size: 16px;
  color: #333;
  margin-bottom: 4px;
  display: block;
  font-weight: 500;
}
.comment-right .publish-time {
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
  display: block;
}
.content-box {
  position: relative;
}
.content-box .content-text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.5em;
  font-size: 14px;
  color: #666;
}
.content-box .content-text:not(.expanded) {
  -webkit-line-clamp: 3;
  line-clamp: 3;
  max-height: 4.5em;
}
.expand-control {
  position: relative;
  margin-top: 8px;
  text-align: right;
}
.expand-control .expand-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 4px 12px;
  background: linear-gradient(90deg, transparent, #fff 30%);
  color: #007AFF;
  font-size: 12px;
  border-radius: 4px;
}
.expand-control .collapse-btn {
  display: inline-block;
  padding: 4px 12px;
  background: #007AFF;
  color: white;
  border-radius: 4px;
  font-size: 12px;
}
.placeholder-style {
  color: #999;
}
/* 点赞容器样式 */
.interaction-bar {
  position: absolute;
  bottom: 8px;
  right: 12px;
  display: flex;
  align-items: center;
  gap: 8px;
}
.interaction-bar .action-btn {
  display: flex;
  align-items: center;
  gap: 2px;
  background: transparent;
  border: none;
  padding: 4px;
  cursor: pointer;
  height: 24px;
}
.interaction-bar .action-btn .iconfont {
  font-size: 14px;
  color: #666;
  transition: all 0.2s;
}
.interaction-bar .action-btn .count {
  font-size: 12px;
  color: #666;
  transition: color 0.2s;
}
.interaction-bar .action-btn.like-btn.active .iconfont {
  color: #ff5656;
}
.interaction-bar .action-btn.like-btn.active .count {
  color: #ff5656;
}
.interaction-bar .action-btn:active {
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
}

