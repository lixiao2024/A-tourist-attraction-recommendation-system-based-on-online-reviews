
.wallet-container {
  padding: 20rpx;
}
.balance-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  text-align: center;
}
.balance-label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}
.balance-amount {
  font-size: 48rpx;
  color: #007AFF;
  font-weight: bold;
  margin-bottom: 30rpx;
  display: block;
}
.recharge-btn {
  width: 200rpx;
  margin: 0 auto;
}
.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin: 30rpx 0 20rpx 20rpx;
}
.safety-tips {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}
.tip-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

